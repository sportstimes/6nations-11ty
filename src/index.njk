<h2>Available Competitions</h2>

<ul class="inline competitions">
  {% for competition in competitions %}
  <li>
      <a href="{{ competition.path | url | absoluteUrl(config.baseUrl) }}">
          <h2>{{ competition.title }}</h2>
          <p>{{ competition.start | date('dS LLLL') }}â€“{{ competition.end | date('dS LLLL yyyy') }}</p>
      </a>
  </li>
  {% endfor %}
</ul>

<h2>Teams</h2>

<ul class="team-badges">
  {% for team in teams %}
  <li>
      <a href="{{ ('/' + team.slug + '/') | url | absoluteUrl(config.baseUrl) }}">
          <img src="{{ ('/img/' + team.image) | url | absoluteUrl(config.baseUrl) }}" alt="{{ team.name }}">
      </a>
  </li>
  {% endfor %}
</ul>
