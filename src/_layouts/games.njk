---
layout: base.njk
---

<h1>{{ tag }} Games</h1>
<p class="subscribe">
    <a href="{{ ('/' + (tag | slugify) + '/') | url | absoluteUrl(config.baseUrl) | webcal }}" onclick="fathom.trackEvent('calendar games');">
        <span role="img">ðŸ—“</span>
        <span>Add {{ tag }} games to your calendar</span>
        <small>in iOS, MacOS and Office</small>
    </a>
</p>
<table>
    <thead>
        <tr>
            <th>Day</th>
            <th>Time</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        {% for game in collections[tag] %}
            <tr class="vevent {{ 'past' if isPast(game) }}">
                <td class="datetime">
                    {% if showDate(game.data.date, loop.index0, collections[tag]) %}
                        <span class="day">{{ game.data.date | date('ccc d LLLL') }}</span>
                    {% endif %}
                    <time class="dtstart">{{ game.data.date | date("yyyy-LL-dd'T'HH:mm:ssZZZ") }}</time>
                    <time class="dtend">{{ game.data.endDate | date("yyyy-LL-dd'T'H:mm:ssZZZ") }}</time>
                </td>
                <td class="time">
                    <span>{{ game.data.date | date('H:mm') }}</span>
                </td>
                <td class="summary">
                    <a class="url" href="{{ game.page.url | url | absoluteUrl(config.baseUrl) }}">{{ game.data.title }}</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<h2>Want more?</h2>
<p>
    <a href="{{ '/' | url | absoluteUrl(config.baseUrl) }}">All games</a>
</p>
